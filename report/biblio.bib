keywords = {Artificial intelligence ;  Card games ;  Clustering ;  Computational and artificial intelligence ;  Content analysis ;  Data transfer (computers) ;  design tools ;  electronic design methodology ;  Games ;  knowledge representation ;  Machine learning ;  Machine learning algorithms ;  Maintenance engineering ;  Markov chains ;  Media ;  Neural networks ;  pattern analysis ;  procedural content generation (PCG) ;  Sound effects ;  Training},
language = {eng},
